<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/ic_rounded_top_30"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/label_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Kategori Laporan"
                android:textStyle="bold"
                android:textColor="@color/blue_jeans"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/label_location"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawablePadding="20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Lokasi Laporan"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/label_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Detail Laporan"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />


            <TextView
                android:paddingTop="10dp"
                android:id="@+id/btn_see_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_baseline_remove_red_eye_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Lihat Laporan" />

            <TextView
                android:paddingTop="10dp"

                android:id="@+id/btn_cancel_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_baseline_delete_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Batalkan Laporan" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>

