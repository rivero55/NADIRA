<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/label_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/blue_jeans"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/xdRed"
                    android:text="Total Positif  : " />

                <TextView
                    android:id="@+id/label_total_positif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"

                    android:text="Jumlah Positif" />
                <TextView
                    android:id="@+id/label_positif"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"

                    android:text="( ) " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/xdRed"
                    android:text="Total Meninggal  : " />

                <TextView
                    android:id="@+id/label_total_meninggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"

                    android:text="Jumlah Meninggal" />
                <TextView
                    android:id="@+id/label_meninggal"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"

                    android:text="( ) " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/xdGreen"
                    android:text="Total Dirawat  : " />

                <TextView
                    android:id="@+id/label_total_dirawat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"

                    android:text="Jumlah Dirawat" />
                <TextView
                    android:id="@+id/label_dirawat"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"

                    android:text="( ) " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/xdGreen"
                    android:text="Total Sembuh   : " />

                <TextView
                    android:id="@+id/label_total_sembuh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Jumlah Negatif" />

                <TextView
                    android:id="@+id/label_sembuh"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_regular"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( ) " />
            </LinearLayout>


        </LinearLayout>



</androidx.cardview.widget.CardView>