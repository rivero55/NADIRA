<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/image_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/carousel_city_placeholder" />

                <TextView
                    android:id="@+id/label_status"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/ic_status_neutral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"/>

                <LinearLayout
                    android:layout_below="@id/image_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#D9FFFFFF"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <RelativeLayout
                        android:background="@color/blue_jeans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                      >
                        <TextView
                            android:id="@+id/label_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginBottom="3dp"
                            android:ellipsize="marquee"
                            android:fontFamily="@font/sf_pro_display"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            tools:text="Kategori Disini" />

                        <ImageView
                            android:id="@+id/btn_detail"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_menu_three_dot"
                            android:layout_marginEnd="10dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            app:tint="@color/white" />
                    </RelativeLayout>



                    <TextView
                        android:id="@+id/label_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="3dp"
                        android:ellipsize="marquee"
                        android:fontFamily="@font/sf_pro_display"
                        android:maxLines="4"
                        android:singleLine="true"
                        android:textColor="@color/blue_jeans"
                        android:textSize="12sp"
                        tools:text="Judul Berita Disini" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="3dp"
                        android:ellipsize="marquee"
                        android:fontFamily="@font/sf_pro_display"
                        android:maxLines="4"
                        android:singleLine="true"
                        android:textColor="@color/blue_jeans"
                        android:textSize="12sp"
                        android:text="Dilaporkan Pada : "/>
                    <TextView
                        android:id="@+id/label_reported_at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="3dp"
                        android:ellipsize="marquee"
                        android:fontFamily="@font/sf_pro_display"
                        android:maxLines="4"
                        android:singleLine="true"
                        android:textColor="@color/blue_jeans"
                        android:textSize="12sp"
                        tools:text="Tanggal Laporan Disini" />
                </LinearLayout>

            </RelativeLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>