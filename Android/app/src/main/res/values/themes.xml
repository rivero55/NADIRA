<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lasagna" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_jeans</item>
        <item name="colorPrimaryVariant">@color/bootstrapBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorWhite</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Lasagna.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="weather_fonts_style">

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#1A000000</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">50</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="Theme.NavigationDrawer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NavigationDrawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>